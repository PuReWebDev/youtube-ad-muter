{
  "manifest_version": 3,
  "name": "YouTube Ad Muter",
  "version": "1.0",
  "description": "Mutes YouTube ads and skips them when possible.",
  "author": "purewebdev@gmail.com",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}